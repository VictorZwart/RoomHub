<!DOCTYPE html>
<html lang="NL">
<head>
    <!-- General information -->
    <title>Roomhub >> {% block title %} Home {% endblock %}</title>

    <!-- CSS and styling -->
    <link rel="shortcut icon" type="image/png" href="{{ static('images/favicon.ico') }}"/>
    <link rel="stylesheet" href="{{ static('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ static('css/main.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ static('css/general.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ static('css/header.css') }}" type="text/css">
    {# Block meant for the stylesheets of specific pages #}
    {% block page_stylesheet %} {% endblock %}

    <!-- Javascript -->
    <script src="{{ static('js/jquery.min.js') }}" type='text/javascript'></script>

    <!-- Meta information -->
    <meta name="description" content="A website for displaying and sharing rooms in Groningen, Netherlands.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
<header>
    <a href="{{ base() }}">
        <img id='header_logo' src="{{ static('images/RoomhubLogo.png') }}" alt="The Roomhub Logo">
    </a>


    {% if 0 == 1 %}
        <div id="reg_log_buttons">
            <a href="{{ base() }}account/login">
                <button type="button" class="btn btn-outline-light">Login</button>
            </a>
            <a href="{{ base() }}account/signup">
                <button type="button" class="btn btn-outline-light">Register</button>
            </a>
        </div>
    {% else %}
        <div id="account_menu">
            <button id='account_button' type="button" class="btn btn-light">Welkom, Jannes <img style="margin-left: 2px;" src="{{ static('images/drop-down-arrow.png') }}"></button>
            <div id="account_options">
                <a href="{{ base() }}account/">Account homepage</a>
                <a href="{{ base() }}">My Rooms</a>
                <a href="{{ base() }}">Log out</a>
            </div>
        </div>
    {% endif %}
</header>

<div id="content">{% block content %}{% endblock %}</div>
<div id="footer">
    &copy; Copyright 2020 by RoomHub
</div>
</body>
</html>